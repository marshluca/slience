.box
  %h2 Sign up
  %form{:action => "/signup", :method => "post", "accept-charset" => "UTF-8"}
    %fieldset
      .clearfix
        %label Name
        .input
          %input{:name => 'user[name]', :size => '30', :type => 'text'}
      .clearfix
        %label Email
        .input
          %input{:name => 'user[email]', :size => '30', :type => 'email'}
      .clearfix
        %label Password
        .input
          %input{:name => 'user[password]', :size => '30', :type => 'password'}
      .clearfix
        %label Password confirmation
        .input
          %input{:name => 'user[password_confirmation]', :size => '30', :type => 'password'}
      .actions
        %input{:name => 'commit', :type => 'submit', :value => 'Sign up', :class => 'btn primary'}